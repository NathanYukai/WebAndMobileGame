extends layout

block content
  style.
    .form-control {
      margin: 5px auto;
      width: 400px;
    }
  form(class="form-signin", role="form", method="post", action="/register")
    if errormsg
      div(class="alert alert-danger")
        p #{errormsg}
    input(type="text", class="form-control", placeholder="Display name", name
     ="displayName", id="displayName", required, autofocus)
    input(type="text", class="form-control", placeholder="Username", name="username", required)
    input(type="password", class="form-control", placeholder="Password (More than 4 characters)", name="password", pattern="\\S{4}\\S*",required)
    input(type="password", class="form-control", placeholder="Confirm password", name="password2", required)
    div(style="margin: 0 auto; display: table;")
      button(type="submit", class='button', style="float:initial") Sign up
      button(href="/home", data-dismiss="modal", class='button', style="float:initial; margin-left: 10px;") Cancel
