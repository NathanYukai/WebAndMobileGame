extends layout

block content
  style.
    .form-control {
      margin: 5px auto;
      width: 300px;
    }
    .profile-container {
      width: 350px; 
      margin: 0 auto;
    }
    .profile-box {
      color: #000;
      background-color: white;
      border-color: #d77900;
      font-size: 14px;
      font-weight: 400;
      border-radius: 20px;
      padding: 6px 12px;
      display: inline-block;
      margin-bottom: 0px;
      line-height: 1.42857;
      text-align: center;
      white-space: nowrap;
      vertical-align: middle;
      -moz-user-select: none;
      background-image: none;
      border: 1px solid transparent;
      margin: 0 auto;
      margin-top: 10px;
    }
  .profile-container
    form(class="profile-box", role="form", method="post", action="/profile/view")
      if errormsg
        div(class="alert alert-danger")
          p #{errormsg}
      div(style="margin: 0 auto; width: 300px;")
        | Display name: #{user.displayName}
      div(style="margin: 0 auto; width: 300px;")
        | Username: #{user.username}
